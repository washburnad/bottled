<div class='float-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2'>
	<h1 class='highlight'>Clients</h1>

	<div class='item-box'>	
		<% @clients.each do |client| %>
			<h3>
				<span class="glyphicon" style=" color: <%= client.glyph_color %>;	"><%= raw client.glyph_id %></span>
				<%= link_to client.name, client_projects_path(client) %>
			</h3>
		<% end %>
		<h3>
			<%= link_to '+ Add New Client', new_client_path, class: 'add-new' %>
		</h3>
	</div>
	

	<%= link_to 'Back', :back, :class => 'btn btn-primary' %>
</div>