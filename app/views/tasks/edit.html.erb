<div class='float-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2'>
	<h1>Edit Task<span class='h1-small'> : <%= current_client.name %> : <%= current_project.name %></span></h1>
	<%= simple_form_for @task, :url => project_task_path(current_project, @task), :method => :put do |f| %>
		<%= f.input :name, label: false, placeholder: 'Task Name' %>
		<%= link_to 'Back', :back, :class => 'btn btn-primary' %>
		<%= f.submit 'Save', :class => 'btn btn-primary' %>
	<% end %>
</div>