<div class='float-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2'>
	<h1 class='highlight'>Edit Client</h1>
	<%= simple_form_for @client, :url => client_path(@client), :method => :put do |f| %>
		<%= f.input :name %>
		<%= f.input :contact_name %>
		<%= f.input :contact_email %>
		<%= f.input :contact_phone %>
		<%= f.input :contact_title %>
		<%= f.input :glyph_color, :as => :minicolors %>
		<%= link_to 'Back', :back, :class => 'btn btn-primary' %>
		<%= f.submit 'Save', :class => 'btn btn-primary' %>

	<% end %>
</div>