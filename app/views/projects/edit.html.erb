<div class='float-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2'>
	<h1 class='highlight'><%= current_client.name %></h1>
	<h1 class='highlight'>Edit <%= @project.name %></h1>
	<%= simple_form_for @project, :url => client_project_path(current_client, @project), :method => :put do |f| %>
		<%= f.input :name %>
		<%= f.input :description %>
		<%= link_to 'Back', :back, :class => 'btn btn-primary' %>
		<%= f.submit 'Save', :class => 'btn btn-primary' %>
	<% end %>
</div>