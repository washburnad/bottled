<div class='float-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2'>
	<h1>
		<%= link_to current_client.name, client_path(current_client) %>
  	<span class="glyphicon" style=" color: <%= current_client.glyph_color %>;	"><%= raw current_client.glyph_id %></span>
  </h1>
	<div class='item-box'>	
		<%= render partial: 'shared/projects',
			locals: {
				projects: @projects
			} %>
		<h3>
			<%= render  partial: 'shared/add', 
				locals: {
				path: new_client_project_path(current_client),
				item_to_add: 'New Project'
				} %>
		</h3>
	</div>
	<%= render 'shared/back' %>
</div>