<!DOCTYPE html>
<html>
<head>
  <title>Time Bottler</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <div class="navbar-header col-xs-6">
		      <%= link_to 'Time Bottler', root_path, :class => 'navbar-brand' %></a>
		    </div>
		    <div class='col-xs-6'>
		      <ul class="nav navbar-nav pull-right">
		      	<% if current_user %>
		        <li>
		      	  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Menu <span class="caret"></span></a>

		      	  <ul class="dropdown-menu" role="menu">
		            <li><%= link_to 'Clients', clients_path %></li>
		            <li><%= link_to 'Projects', user_projects_path(current_user) %></li>
		            <li><%= link_to 'Tasks', user_tasks_path(current_user) %></li>
		            <li><%= link_to 'Reports', reports_path %></li>
		            <li><%= link_to 'Collaborations', user_collaborations_path(current_user) %></li>
		     	    </ul>
		      	</li>
		      	  <li><%= link_to current_user.first_name || current_user.email , edit_user_registration_path %></li>
		        <% else %>
		        	<li><%= link_to 'Sign Up', new_user_registration_path %></li>
	    	    <% end %>
		        	
		        <% if current_user %>
		        	<li><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %></li>
		        <% else %>
			        <li><%= link_to 'Sign In', new_user_session_path %></li> 
			      <% end %>
		      </ul>
		    </div>
		  </div>
		</nav>
	<div class='container-fluid'>
	
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>

		<%= yield %>
	</div>
</body>
</html>
