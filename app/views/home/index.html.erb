<div class='float-box col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2'>
	<% if current_user %>
		<div class='col-xs-12 col-sm-8'>
			<div class='col-xs-12 col-sm-6'>
				<h1><%= link_to 'Clients', clients_path, :class => 'nav-link' %></h1>
				<% @clients.each do |client| %>
					<h3 class='highlight'>
						<span class="glyphicon" style=" color: <%= client.glyph_color %>;	"><%= raw client.glyph_id %></span>
						<%= link_to client.name, client_projects_path(client), :class => 'nav-link vert-list' %>
					<h3>
				<% end %>
			</div>
			<div class='col-xs-12 col-sm-6'>
				<h1><%= link_to 'Projects', '#', :class => 'nav-link ' %></h1>
				<% @projects.each do |project| %>
					<h3 class='highlight'>
						<span class="glyphicon" style=" color: <%= project.client.glyph_color %>;	"><%= raw project.client.glyph_id %></span>
						<%= link_to project.name, project_tasks_path( project ), :class => 'nav-link vert-list' %>
					</h3>
				<% end %>
			</div>
			<div class='clr'></div>
			<div class='col-xs-12 col-sm-6'>
				<h1><%= link_to 'Tasks', '#', :class => 'nav-link ' %></h1>
				<% @tasks.each do |task| %>
					<h3 class='highlight'>
						<span class="glyphicon" style=" color: <%= task.project.client.glyph_color %>;	"><%= raw task.project.client.glyph_id %></span>
						<%= link_to task.name, project_task_path( task.project, task ), :class => 'nav-link vert-list' %>
					</h3>
				<% end %>
			</div>
			<div class='col-xs-12 col-sm-6'>
				<h1><%= link_to 'Reports', reports_path, :class => 'nav-link ' %></h1>
				<% @reports.each do |report| %>
					<h3 class='highlight'>
						<span class="glyphicon" style=" color: <%= report.reportable.glyph_color %>;	"><%= raw report.reportable.glyph_id %></span>
						<%= link_to report.name, report_path( report ), :class => 'nav-link vert-list' %>
					</h3>
				<% end %>
			</div>
			<div class='clr'></div>
		</div>
		<div class='col-xs-12 col-sm-4'>
			<h1 class='nav-link'>Favorites</h1>
			<h3 class='highlight'>Drag Favorites Here</h3>
		</div>
		
	<% else %>
		<%= link_to 'Sign In', new_user_session_path, :class => 'nav-link vert-list' %><br />
		<%= link_to 'Sign Up', new_user_registration_path, :class => 'nav-link vert-list' %>
	<% end %>
</div>